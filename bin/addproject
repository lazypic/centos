#!/usr/bin/env python
#coding:utf8
import os
import sys

ROOT = "/project"

def addProject(projectName):
	"""
	프로젝트 하위 경로를 생성하는 함수입니다.
	"""
	global ROOT
	subDirs = ["shot",
			"in",
			"out",
			"edit",
			"edit/otio",
			"asset",
			"asset/char",
			"asset/osl",
			"config",
			"config/ocio",
			"config/thumbnail",
			"doc",
			"doc/concept"]
	for s in subDirs:
		p = "/".join([ROOT,projectName,s])
		try:
			os.makedirs(p)
		except:
			return "%s 프로젝트를 생성할 수 없습니다." % (projectName)
	return None

def checkRoot():
	"""
	/project 폴더가 존재하는지 체크한다.
	"""
	global ROOT
	if not os.path.exists(ROOT):
		return "%s 폴더가 존재하지 않습니다." % (ROOT)
	return None

def isProject(projectName):
	"""
	프로젝트가 이미 존재하는지 체크한다.
	"""
	global ROOT
	if os.path.exists("%s/%s" % (ROOT, projectName)):
		return "%s 프로젝트가 이미 존재합니다." % (projectName)
	return None

def help():
	print "How to use:"
	print "$ addproject projectname"
	

if __name__ == "__main__":
	# 입력갯수 체크
	if len(sys.argv) != 2:
		help()
		sys.exit(1)
	projectName = sys.argv[1]

	# /project 존재유무 체크
	err = checkRoot()
	if err:
		print err
		sys.exit(1)

	# 프로젝트가 이미 존재하는지 체크
	err = isProject(projectName)
	if err:
		print err
		sys.exit(1)
	
	# 프로젝트 하위 경로 생성
	err = addProject(projectName)
	if err :
		print err
		sys.exit(1)
